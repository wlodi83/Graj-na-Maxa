<div id="advanced_search_form">
<%= form_tag search_path, :method => :get do %>
<p>
<%= text_field_tag :query, params[:query] %>
</p>
<p>Users:<br />
<% @users.each do |user| %>
<%= check_box_tag 'user_ids[]', user.id %>
<%= user.email %>
<% end %>
</p>
<p>Categories:<br />
<ul>
<% @categories.each do |root| %>
<li><%= check_box_tag 'category_ids[]', root.id %><%= root.name %></li>
<% if root.children.size > 0 %>
<ul>
<% root.children.each do |children| %>
<li><%= check_box_tag 'category_ids[]', children.id %><%= children.name %></li>
<% end %>
</ul>
<% end %>
<% end %>
</ul>
<p>
<%= submit_tag "Search", :name => nil %>
</p>
<% end %>
</div>
